\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
P_{n}^{(n-j)}(\alpha) & =(n-j)!R_{j}+0\\
 & =(n-j)!R_{j}
\end{align*}

\end_inset


\end_layout

