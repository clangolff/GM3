 Ainsi 
\begin_inset Formula $Q(x)=\sum_{j=0}^{n-1}q_{j}T_{j}$
\end_inset

 dans la base de Tchebychev.
 
\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\begin{align*}
P_{n} & =(x-\alpha)\sum_{j=0}^{n-1}q_{j}T_{j}+rT_{0}(x)\\
 & =\sum_{j=1}^{n-1}q_{j}xT_{j}-\sum_{j=1}^{n-1}\alpha q_{j}T_{j}+(x-\alpha)q_{0}+r\\
 & =\sum_{j=1}^{n-1}\frac{q_{j}}{2}(T_{j+1}(x)+T_{j-1}(x))-\sum_{j=1}^{n-1}\alpha q_{j}T_{j}+(x-\alpha)q_{0}+r\\
 & =\sum_{j=0}^{n-2}\frac{q_{j+1}}{2}T_{j}(x)+\sum_{j=2}^{n}\frac{q_{j-1}}{2}T_{j}(x)-\sum_{j=1}^{n-1}\alpha q_{j}T_{j}+(x-\alpha)q_{0}+r\\
 & =\sum_{j=2}^{n-2}\frac{q_{j+1}}{2}T_{j}(x)+\frac{q_{1}}{2}T_{0}(x)+\frac{q_{2}}{2}T_{1}(x)+\sum_{j=2}^{n-2}\frac{q_{j-1}}{2}T_{j}(x)+\frac{q_{n-1}}{2}T_{n}(x)+\frac{q_{n-2}}{2}T_{n-1}(x)\\
 & -\sum_{j=1}^{n-1}\alpha q_{j}T_{j}+(x-\alpha)q_{0}+r\\
 & =\sum_{j=2}^{n-2}(\frac{q_{j+1}+q_{j-1}}{2}-\alpha q_{j})T_{j}(x)+(\frac{q_{2}}{2}+q_{0}-\alpha q_{1})T_{1}(x)+(\frac{q_{1}}{2}-\alpha q_{0}+r)T_{0}(x)\\
 & +\frac{q_{n-1}}{2}T_{n}(x)+(\frac{q_{n-2}}{2}-\alpha q_{n-1})T_{n-1}(x)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\align left
