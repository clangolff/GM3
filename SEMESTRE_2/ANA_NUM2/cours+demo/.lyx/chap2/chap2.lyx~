\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
center
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Graphics
	filename image/partie2/prop25.png
	lyxscale 30
	scale 75

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
On a 
\begin_inset Formula 
\[
\underbrace{xv_{n}}_{deg\;n+1}\in P[X^{n+2}]
\]

\end_inset


\end_layout

\begin_layout Standard
Les 
\begin_inset Formula $(v_{j})_{j\in\{-1,...,n+1\}}$
\end_inset

formant une base de 
\begin_inset Formula $P[X^{n+2}]$
\end_inset

, on a (
\begin_inset Formula $v_{-1}=1)$
\end_inset


\begin_inset Formula 
\begin{align*}
xv_{n}(x) & =\sum_{j=-1}^{n+1}\alpha_{j}v_{j}(x)\;n+3\;termes\\
x(x^{n+1}+...) & =\alpha_{n+1}(x^{n+2}+...)+..
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Donc nécessairement, 
\begin_inset Formula $\alpha_{n+1}=1$
\end_inset

.
\end_layout

\begin_layout Standard
Ainsi, 
\begin_inset Formula 
\[
xv_{n}(x)=v_{n+1}+\sum_{j=-1}^{n}\alpha_{j}v_{j}(x)
\]

\end_inset


\end_layout

\begin_layout Standard
On en déduit que 
\begin_inset Formula 
\begin{align*}
\int_{a}^{b}xv_{n}(x)v_{k}(x)dx & =\int_{a}^{b}v_{n+1}(x)v_{k}(x)dx+\sum_{j=-1}^{n}\alpha_{j}\underbrace{\int_{a}^{b}v_{j}(x)v_{k}(x)}_{\delta_{jk}\int_{a}^{b}v_{k}^{2}(x)dx}dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Donc pour 
\begin_inset Formula $k\leq n-2$
\end_inset


\begin_inset Formula 
\[
\underbrace{\int_{a}^{b}v_{n}(x)\underbrace{xv_{k}(x)}_{deg\;k+2\leq n}dx}_{0}=\alpha_{k}\underbrace{\int_{a}^{b}v_{k}^{2}(x)dx}_{>0}
\]

\end_inset


\end_layout

\begin_layout Standard
D'où 
\begin_inset Formula $\alpha_{k}=0\;\forall k\leq n-2$
\end_inset


\end_layout

\begin_layout Standard
On obtient ainsi 
\begin_inset Formula 
\[
xv_{n}(x)=v_{n+1}+\alpha_{n}v_{n}(x)+\alpha_{n-1}v_{n-1}(x)
\]

\end_inset


\end_layout

\begin_layout Standard
D'où la relation de récurrence.
\end_layout

