\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\series bold
Exemple détaillé 
\series default
Formule du point milieu
\end_layout

\begin_layout Standard
Rappel : 
\begin_inset Formula 
\[
\int_{-1}^{1}f(\hat{x})d\hat{x}\simeq f(0)\times2
\]

\end_inset


\end_layout

\begin_layout Standard
Cette formule est exacte sur 
\begin_inset Formula $P[X]$
\end_inset

.
\end_layout

\begin_layout Standard
Pour déduire la formule composite, on a 
\begin_inset Formula 
\[
\int_{a}^{b}f(x)dx=\sum_{j=0}^{p-1}\int_{x_{j}}^{x_{j+1}}f(x)dx
\]

\end_inset


\end_layout

\begin_layout Standard
où 
\begin_inset Formula $x_{j}=a+jh$
\end_inset

 et 
\begin_inset Formula $h=\frac{b-a}{p}$
\end_inset


\end_layout

\begin_layout Standard
On pose 
\begin_inset Formula $x=\frac{\hat{x}+1}{2}(x_{j+1}-x_{j})+x_{j}$
\end_inset

 avec 
\begin_inset Formula $\hat{x}\in[-1,1]$
\end_inset


\end_layout

\begin_layout Standard
Ainsi 
\begin_inset Formula $dx=\frac{x_{j+1}-x_{j}}{2}d\hat{x}$
\end_inset

 d'où
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{x_{j}}^{x_{j+1}}f(x)dx=\int_{-1}^{1}f(\frac{\hat{x}+1}{2}(x_{j+1}-x_{j})+x_{j})\frac{x_{j+1}-x_{j}}{2}d\hat{x}
\]

\end_inset


\end_layout

\begin_layout Standard
En appliquant la formule du point milieu, on a 
\begin_inset Formula 
\begin{align*}
\int_{x_{j}}^{x_{j+1}}f(x)dx & \simeq f(\frac{x_{j+1}-x_{j}}{2}+x_{j})\frac{x_{j+1}-x_{j}}{2})\times2\\
 & \simeq(x_{j+1}-x_{j})f(\frac{x_{j+1}+x_{j}}{2})
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Finalement 
\begin_inset Formula 
\[
\int_{a}^{b}f(x)dx\simeq\sum_{j=0}^{p-1}(x_{j+1}-x_{j})f(\frac{x_{j+1}+x_{j}}{2})
\]

\end_inset


\end_layout

\begin_layout Subsection
Analyse de convergence
\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
thickness "0.4pt"
separation "3pt"
shadowsize "4pt"
framecolor "black"
backgroundcolor "none"
status open

\begin_layout Plain Layout
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
center
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Graphics
	filename image/partie3/prop3.2.png
	lyxscale 30
	scale 75

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\series bold
Preuve 
\end_layout

\begin_layout Standard
On a (Remarque, on a pris 
\begin_inset Formula $x_{j+1}-x_{j}=h$
\end_inset

 )
\begin_inset Formula 
\begin{align*}
|I-I_{h}| & =|\sum_{j=0}^{p-1}\int_{x_{j}}^{x_{j+1}}f(x)dx-\sum_{j=0}^{p-1}\sum_{i=0}^{n}\omega_{i}\frac{h}{2}f(x_{ij})|\\
 & =|\sum_{j=0}^{p-1}\left[\underbrace{\int_{x_{j}}^{x_{j+1}}f(x)dx-\sum_{i=0}^{n}\omega_{i}\frac{h}{2}f(x_{ij})}_{E_{j}}\right]|
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Puisque la formule simple est exacte sur 
\begin_inset Formula $P[X^{k}]$
\end_inset

, on a 
\begin_inset Formula $\forall p\in P[X^{k}]$
\end_inset

 
\begin_inset Formula 
\[
\int_{x_{j}}^{x_{j+1}}p(x)dx=\sum_{i=0}^{n}\omega_{i}\frac{h}{2}p(x_{ij})
\]

\end_inset


\end_layout

\begin_layout Standard
Posons alors 
\begin_inset Formula $p_{k}$
\end_inset

 le polynome de 
\begin_inset Formula $P[X^{k}]$
\end_inset

 vérifiant 
\begin_inset Formula 
\begin{align*}
p_{k}(x_{ij}) & =f(x_{ij})\;\forall i\in\{0,...,n\}\;(n+1\;conditions)\\
p_{k}(x_{lj}) & =f(x_{lj})\;\forall l\in\{n+1,...,k\}\;(k-n\;conditions)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Avec 
\begin_inset Formula $x_{lj}$
\end_inset

 des points d'interpolation dans 
\begin_inset Formula $[x_{j},x_{j+1}]$
\end_inset

 diffèrents des 
\begin_inset Formula $x_{j}$
\end_inset


\end_layout

\begin_layout Standard
( On rajoute des points jusqu'au degrès d'éxactitude de la formule )
\end_layout

\begin_layout Standard
Alors on a 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
E_{j}=\int_{x_{j}}^{x_{j+1}}f(x)-p_{k}(x)dx+\int_{x_{j}}^{x_{j+1}}p_{k}(x)dx-\sum_{i=0}^{n}\omega_{i}\frac{h}{2}f(x_{ij})
\]

\end_inset


\end_layout

\begin_layout Standard
Et comme la formule est exacte sur 
\begin_inset Formula $P[X^{k}]$
\end_inset

 , on a 
\begin_inset Formula 
\[
\int_{x_{j}}^{x_{j+1}}p_{k}(x)dx=\sum_{i=0}^{n}\omega_{i}\frac{h}{2}\underbrace{p(x_{ij})}_{f(x_{ij})}
\]

\end_inset


\end_layout

\begin_layout Standard
Donc 
\begin_inset Formula 
\[
E_{j}=\int_{x_{j}}^{x_{j+1}}\frac{f^{(k+1)}(\xi)}{(k+1)!}\prod_{i=0}^{n}(x-x_{ij})\prod_{l=n+1}^{k}(x-x_{lj})dx
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
|E_{j}| & \leq\int_{x_{j}}^{x_{j+1}}\frac{|f^{(k+1)}(\xi)|}{(k+1)!}\prod_{i=0}^{n}\underbrace{|(x-x_{ij})|}_{\leq h}\prod_{l=n+1}^{k}\underbrace{|(x-x_{lj})|}_{\leq h}dx\\
 & \leq\frac{\Vert f^{(k+1)}\Vert_{\infty}}{(k+1)!}h^{k+1}\underbrace{\int_{x_{j}}^{x_{j+1}}1dx}_{h}\\
 & \leq\frac{\Vert f^{(k+1)}\Vert_{\infty}}{(k+1)!}h^{k+2}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Finalement 
\begin_inset Formula 
\begin{align*}
|I-I_{h}| & =|\sum_{j=0}^{p-1}E_{j}|\\
 & \leq\sum_{j=0}^{p-1}\frac{\Vert f^{(k+1)}\Vert_{\infty}}{(k+1)!}h^{k+2}\\
 & =\frac{\Vert f^{(k+1)}\Vert_{\infty}}{(k+1)!}h^{k+2}\times\underbrace{p}_{\frac{b-a}{h}}\\
 & =\frac{\Vert f^{(k+1)}\Vert_{\infty}}{(k+1)!}h^{k+1}(b-a)
\end{align*}

\end_inset


\end_layout

