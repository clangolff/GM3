\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
(sens direct) Supposons que la formule soit exacte sur 
\begin_inset Formula $P[X^{k}]$
\end_inset

 alors 
\begin_inset Formula $\forall i\in\{0,...,k\}$
\end_inset

 on a 
\begin_inset Formula $f(x)=x^{i}\in P[X^{k}]$
\end_inset

 et donc 
\begin_inset Formula $R_{n}(f)=I-\sum_{j=0}^{n}w_{j}x_{j}^{i}=0$
\end_inset


\end_layout

\begin_layout Standard
(sens indirect) Supposons maintenant que 
\begin_inset Formula $R_{n}(x^{i})=0\;\forall i\in\{0,...,k\}$
\end_inset

 où 
\begin_inset Formula $R_{n}(x^{i})=\int_{a}^{b}x^{i}dx-\sum_{j=0}^{n}w_{j}x_{j}^{i}$
\end_inset


\end_layout

\begin_layout Standard
Soit 
\begin_inset Formula $f\in P[X^{k}]\iff f(x)=\sum_{l=0}^{k}a_{l}x^{l}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
R_{n}(f) & =\int_{a}^{b}\sum_{l=0}^{k}a_{l}x^{l}dx-\sum_{j=0}^{n}w_{j}\sum_{l=0}^{k}a_{l}x_{j}^{l}\\
 & =\sum_{l=0}^{k}a_{l}\underbrace{\left[\int_{a}^{b}x^{l}dx-\sum_{j=0}^{n}w_{j}x_{j}^{l}\right]}_{R_{n}(x^{l})=0}=0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
