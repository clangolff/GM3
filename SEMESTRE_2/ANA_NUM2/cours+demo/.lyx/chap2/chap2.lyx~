\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
Montrons l'unicité :
\end_layout

\begin_layout Standard
Supposons 
\begin_inset Formula $v_{1}$
\end_inset

 et 
\begin_inset Formula $v_{2}$
\end_inset

 2 solutions, alors 
\begin_inset Formula $q=v_{1}-v_{2}$
\end_inset

 vérifie : 
\end_layout

\begin_layout Itemize
\begin_inset Formula $q\in P[X^{n}]$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\int_{a}^{b}q(x)x^{j}dx=0\;\forall j\in\{0,...,n\}$
\end_inset


\end_layout

\begin_layout Standard
Remarque : 
\begin_inset Formula $\int_{a}^{b}v_{n}(x)x^{j}dx=0\;\forall j\in\{0,...,n\}\iff\int_{a}^{b}v_{n}(x)p(x)dx=0\;p\in P[X^{n}]$
\end_inset


\end_layout

\begin_layout Standard
Ainsi 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\int_{a}^{b}q(x)x^{j}dx & =0\;\forall j\in\{0,...,n\}\\
\iff & \int_{a}^{b}q(x)p(x)dx=0\;\forall p\in P[X^{n}]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
En particulier, pour 
\begin_inset Formula $p=q\in P[X^{n}]$
\end_inset

 on a 
\begin_inset Formula $\int_{a}^{b}q^{2}(x)dx=0\iff q=0$
\end_inset


\end_layout

\begin_layout Standard
Existence :
\end_layout

\begin_layout Standard
\begin_inset Formula $v_{n}(x)=x^{n+1}+a_{n}x^{n}+...+a_{0}$
\end_inset


\end_layout

\begin_layout Standard
les conditions 
\begin_inset Formula $\forall j\in\{0,..,n\}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
\int_{a}^{b}v_{n}(x)x^{j}dx & =0\iff\int_{a}^{b}x^{n+1}x^{j}dx+\sum_{i=0}^{n}a_{_{i}}\int_{a}^{b}x^{j}x^{i}dx=0\\
\iff\sum_{i=0}^{n}a_{i}\underbrace{\int_{a}^{b}x^{j}x^{i}dx}_{M_{ij}} & =-\underbrace{\int_{a}^{b}x^{n+1+j}dx}_{b_{j}}\\
\iff & Ma=b
\end{align*}

\end_inset

 où 
\begin_inset Formula $M$
\end_inset

 est une matrice carré de dimension 
\begin_inset Formula $(n+1)\times(n+1)$
\end_inset

 et elle est injective car on a l'unicité.
 Donc par le théorème du rang, elle est bijective donc il existe une solution.
\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
