thickness "0.4pt"
separation "3pt"
shadowsize "4pt"
framecolor "black"
backgroundcolor "none"
status open

\begin_layout Plain Layout
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
center
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Graphics
	filename image/partie2/prop28.png
	lyxscale 30
	scale 75

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
Posons 
\begin_inset Formula $P_{n}$
\end_inset

 le polynome d'Hermite associé à 
\begin_inset Formula $f$
\end_inset

 tel que 
\begin_inset Formula $P_{n}^{j}(x_{i})=f^{(j)}(x_{i})\;\forall j\in\{0,1\}\;\forall i\in\{0,...,n\}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R_{n}(f)=\int_{a}^{b}f(x)-P_{n}(x)dx+\underbrace{\int_{a}^{b}P_{n}(x)dx}_{\in P[X^{2n+1}]}-\sum_{i=0}^{n}w_{i}f(x_{i})
\]

\end_inset


\end_layout

\begin_layout Standard
On a 
\begin_inset Formula $\int_{a}^{b}P_{n}(x)dx=\sum_{i=0}^{n}w_{i}P_{n}(x_{i})$
\end_inset

 (car exacte sur 
\begin_inset Formula $P[X^{2n+1}]$
\end_inset

) donc 
\begin_inset Formula $R_{n}(f)=\int_{a}^{b}f(x)-P_{n}(x)dx$
\end_inset


\end_layout

\begin_layout Standard
En rappelant que 
\begin_inset Formula 
\[
f(x)-P_{n}(x)=\frac{f^{(2n+2)}(\eta)}{(2n+2)!}v_{n}^{2}(x)
\]

\end_inset


\end_layout

\begin_layout Standard
On obtient grâce au théorème de la moyenne :
\begin_inset Formula 
\[
R_{n}(f)=\int_{a}^{b}\frac{f^{(2n+2)}(\eta)}{(2n+2)!}\underbrace{v_{n}^{2}(x)}_{\geq0}dx=\frac{f^{(2n+2)}(\eta)}{(2n+2)!}\int_{a}^{b}v_{n}^{2}(x)dx
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
thickness "0.4pt"
separation "3pt"
