\begin_layout Section
Quadrature de Gauss
\end_layout

\begin_layout Subsection
Choix optimal des points
\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
