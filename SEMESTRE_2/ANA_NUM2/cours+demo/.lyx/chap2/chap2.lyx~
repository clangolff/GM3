\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard
Formule des Trapèze : 
\end_layout

\begin_layout Standard
On cherche 
\begin_inset Formula $w_{0}$
\end_inset

 et 
\begin_inset Formula $w_{1}$
\end_inset

 tel que 
\begin_inset Formula $I=w_{0}f(a)+w_{1}f(b)+R_{1}(f)$
\end_inset

 avec 
\begin_inset Formula $R_{1}(f)$
\end_inset

 si 
\begin_inset Formula $f\in P[X^{1}]$
\end_inset


\end_layout

\begin_layout Standard
Or 
\begin_inset Formula 
\begin{align*}
R_{1}(f) & =0\;f\in P[X^{1}]\iff\begin{cases}
R_{1}(1) & =0\\
R_{1}(x) & =0
\end{cases}\\
 & \iff\begin{cases}
\int_{a}^{b}1dx-(w_{0}a+w_{1}b) & =0\\
\int_{a}^{b}xdx-(w_{0}a+w_{1}b) & =0
\end{cases}\\
 & \iff\begin{cases}
b-a & =w_{0}+w_{1}\\
\frac{b^{2}-a^{2}}{2} & =aw_{0}+bw_{1}
\end{cases}\\
 & \iff\begin{cases}
b-a & =w_{0}+w_{1}\\
(b-a)w_{1} & =\frac{b^{2}-a^{2}}{2}-a(b-a)
\end{cases}\\
 & \iff\begin{cases}
b-a & =w_{0}+w_{1}\\
w_{1} & =\frac{(a-b)^{2}}{2(b-a)}=\frac{b-a}{2}
\end{cases}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Formule de Simpson :
\end_layout

\begin_layout Standard
Pour les formules de Newton Cotes, on a 
\begin_inset Formula $w_{i}=\int_{a}^{b}L_{i}^{n}(x)dx$
\end_inset


\end_layout

\begin_layout Standard
Rappel ( vue en TD) 
\begin_inset Formula $w_{i}=w_{n-i}$
\end_inset


\end_layout

\begin_layout Standard
Une autre façon de calculer les 
\begin_inset Formula $w_{i}$
\end_inset

 est d'utiliser le fait que 
\begin_inset Formula $R_{2}(x^{i})=0\;\forall i\in\{0,1,2\}$
\end_inset

 (exacte sur 
\begin_inset Formula $P[X^{2}]$
\end_inset

)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\iff & \begin{cases}
\int_{a}^{b}1dx-(w_{0}+w_{1}+w_{2}) & =0\\
\int_{a}^{b}xdx-(aw_{0}+\frac{a+b}{2}w_{1}+bw_{2}) & =0\\
\int_{a}^{b}x^{2}dx-(a^{2}w_{0}+\left(\frac{a+b}{2}\right)^{2}w_{1}+b^{2}w_{2}) & =0
\end{cases}\\
\end{align*}

\end_inset


\end_layout

