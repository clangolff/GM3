\end_inset


\begin_inset Graphics
	filename image/partie2/theoreme21png.png
	lyxscale 30
	scale 75

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
(sens direct) Supposons la formule exacte sur 
\begin_inset Formula $P[X^{2n+1}]$
\end_inset


\begin_inset Formula 
\begin{align*}
\int_{a}^{b}L_{k}^{n}(x)dx & =\sum_{i=0}^{n}w_{i}\underbrace{L_{k}^{n}(x_{i})}_{\delta_{ki}}\\
\iff w_{k} & =\int_{a}^{b}L_{k}^{n}(x)dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Notons 
\begin_inset Formula $v_{n}(x)=\sum_{i=0}^{n}(x-x_{i})\in P[X^{n+1}]$
\end_inset


\end_layout

\begin_layout Standard
On a 
\begin_inset Formula $x^{j}v_{n}(x)\in P[X^{n+i+j}]\subset P[X^{2n+1}]\;\forall j\in\{0,..,n\}$
\end_inset


\end_layout

\begin_layout Standard
Par conséquent 
\begin_inset Formula $\int_{a}^{b}x^{j}v_{n}(x)dx=\sum_{i=0}^{n}w_{i}x_{i}^{j}\underbrace{v_{n}(x_{i})}_{0}=0$
\end_inset


\end_layout

\begin_layout Standard
(sens indirect)
\end_layout

\begin_layout Standard
Supposons que 
\begin_inset Formula $w_{i}=\int_{a}^{b}L_{i}^{n}(x)dx$
\end_inset

 et 
\begin_inset Formula $\int_{a}^{b}x^{j}v_{n}(x)dx=0\;\forall j\in\{0,...,n\}$
\end_inset

 alors on est exacte sur 
\begin_inset Formula $P[X^{n}]$
\end_inset

 au moins.
 
\end_layout

\begin_layout Standard
En effet, 
\begin_inset Formula $\int_{a}^{b}p_{n}dx=\int_{a}^{b}\sum_{i=0}^{n}f(x_{i})L_{i}^{n}(x)dx=\sum_{i=0}^{n}f(x_{i})\underbrace{\int_{a}^{b}L_{i}^{n}(x)dx}_{w_{i}}$
\end_inset

.
\end_layout

\begin_layout Standard
Soit 
\begin_inset Formula $p\in P[X^{2n+1}]$
\end_inset

 on a 
\begin_inset Formula $p(x)=\underbrace{v_{n}(x)}_{deg=n+1}\underbrace{d(x)}_{deg=n}+\underbrace{r(x)}_{deg=n}$
\end_inset

 de plus 
\begin_inset Formula $\forall q\in P[X^{n}],$
\end_inset


\begin_inset Formula 
\begin{align*}
\int_{a}^{b}q(x)v_{n}(x)dx & =\int_{a}^{b}\sum_{j=0}^{n}q_{j}x^{j}v_{n}(x)dx\\
 & \sum_{j=0}^{n}q_{j}\int_{a}^{b}x^{j}v_{n}(x)dx=0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Ainsi, 
\begin_inset Formula 
\begin{align*}
\int_{a}^{b}p(x)dx & =\underbrace{\int_{a}^{b}d(x)v_{n}(x)dx}_{0}+\int_{a}^{b}\underbrace{r(x)}_{deg=n}dx\\
 & =\sum_{i=0}^{n}w_{i}r(x_{i})
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Or 
\begin_inset Formula $p(x_{i})=v_{n}(x_{i})d(x_{i})+r(x_{i})$
\end_inset

 donc 
\begin_inset Formula $\int_{a}^{b}p(x)dx=\sum_{i=0}^{n}w_{i}p(x_{i})\;\forall p\in P[X^{2n+1}]$
\end_inset


\end_layout

