\begin_inset Graphics
	filename image/partie1/prop14.png
	lyxscale 30
	scale 75

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace 1cm
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preuve
\end_layout

\begin_layout Standard
On a 
\begin_inset Formula $x_{n-i}=a+(n-i)h$
\end_inset

 avec 
\begin_inset Formula $h=\frac{b-a}{n}$
\end_inset

 
\begin_inset Formula $\iff a+nh-ih\iff a+b-a-ih=b-ih$
\end_inset

 
\end_layout

\begin_layout Standard
et 
\begin_inset Formula $\frac{a+b}{2}-(x_{i}-\frac{a+b}{2})=a+b-x_{i}=a+b-ih-a=b-ih$
\end_inset

 donc 
\begin_inset Formula $x_{n-i}=a+b-x_{i}$
\end_inset


\end_layout

\begin_layout Standard
Montrons que 
\begin_inset Formula $L_{i}^{n}(a+b-x)-L_{n-i}^{n}(x)$
\end_inset


\end_layout

\begin_layout Standard
en effet, si on pose 
\begin_inset Formula $v(x)=L_{n-i}^{n}(x)-L_{i}^{n}(a+b-x)\;\forall P[X^{n}]$
\end_inset


\end_layout

\begin_layout Standard
On a 
\begin_inset Formula $v(x_{j})=L_{n-i}^{n}(x_{j})-L_{i}^{n}\text{\ensuremath{\underbrace{(a+b-x_{j})}_{x_{n-j}}}}=\delta_{j,n-i}-\delta_{i,n-j}$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $v$
\end_inset

 a 
\begin_inset Formula $n+1$
\end_inset

 racines et 
\begin_inset Formula $v\in P[X^{n}]$
\end_inset

 donc 
\begin_inset Formula $v=0$
\end_inset


\end_layout

\begin_layout Standard
Par conséquent, 
\begin_inset Formula $L_{i}^{n}(a+b-x)=L_{n-i}^{n}(x)$
\end_inset


\end_layout

\begin_layout Standard
et donc 
\begin_inset Formula 
\begin{align*}
w_{n-i} & =\int_{a}^{b}L_{n-i}^{n}(x)dx\\
 & =\int_{a}^{b}L_{i}^{n}(a+b-x)dx\\
 & =\int_{b}^{a}L_{i}^{n}(x)-dx\\
 & =\int_{a}^{b}L_{i}^{n}(x)dx=w_{i}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Box Frameless
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
