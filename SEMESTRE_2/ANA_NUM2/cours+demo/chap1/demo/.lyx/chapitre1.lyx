\begin_layout Standard
Pour 
\begin_inset Formula $k=0$
\end_inset

, on a
\begin_inset Formula 
\[
T_{1}^{i}(x)=\begin{cases}
T_{0}^{i}(x)+f'(y_{i})(x-y_{i}) & si\;y_{i}=y_{i+1}\\
\frac{T_{0}^{i}(x)(y_{i+1}-x)-T_{0}^{i+1}(x)(y_{i}-x)}{y_{i+1}-y_{i}} & sinon
\end{cases}
\]

\end_inset

 où 
\begin_inset Formula $T_{0}^{i}(x)=f(y_{i})$
\end_inset

.
\end_layout

\begin_layout Standard
Si 
\begin_inset Formula $y_{i}=y_{i+1}$
\end_inset

on a par définition 
\begin_inset Formula $T_{1}^{i}$
\end_inset

 le polynôme de degrès 1 qui vérifie 
\begin_inset Formula $T_{1}^{i}(y_{i})=f(y_{i})$
\end_inset

 et 
\begin_inset Formula $(T_{1}^{i})'(y_{i})=f'(y_{i})\iff T_{1}^{i}(x)=f(y_{i})+f'(y_{i})(x-y_{i})$
\end_inset

 (dl d'ordre 1)
\end_layout

\begin_layout Standard
Si 
\begin_inset Formula $y_{i}\neq y_{i+1}$
\end_inset

, on a par définition 
\begin_inset Formula 
\begin{align*}
T_{1}^{i}(x) & =f(y_{i})+\frac{f(y_{i+1})-f(y_{i})}{y_{i+1}-y_{i}}(x-y_{i})\\
= & T_{0}^{i}(x)+\frac{T_{0}^{i+1}(x)-T_{0}^{i}(x)}{y_{i+1}-y_{i}}(x-y_{i})\\
= & \frac{T_{0}^{i}(x)(y_{i+1}-y_{i})-T_{0}^{i+1}(x)(y_{i}-x)-T_{0}^{i}(x)(x-y_{i})}{y_{i+1}-y_{i}}\\
= & \frac{T_{0}^{i}(x)(y_{i+1}-x)-T_{0}^{i+1}(x)(y_{i}-x)}{y_{i+1}-y_{i}}
\end{align*}

\end_inset


\end_layout

