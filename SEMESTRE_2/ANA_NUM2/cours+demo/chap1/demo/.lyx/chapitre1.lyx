\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\tilde{(T_{k+1}^{i}})'(y_{j})=f'(y_{j})\;\forall j\in\{i,..,i+k\}\;tel\;que\;y_{j}=y_{j+1}$
\end_inset


\end_layout

\begin_layout Standard
On a 
\begin_inset Formula $\forall j\in\{i+1,..,i+k$
\end_inset

}
\end_layout

\begin_layout Standard
