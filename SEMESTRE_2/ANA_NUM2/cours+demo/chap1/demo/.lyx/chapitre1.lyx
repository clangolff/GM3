\tilde{T_{k+1}^{i}(y_{j})} & =\frac{T_{k+1}^{i}(y_{j})(y_{i+k+1}-y_{j})-T_{k+1}^{i}(y_{j})(y_{i}-y_{j})}{y_{i+k+1}-y_{i}}\\
= & f(y_{j})\frac{y_{i+k+1-y_{j}+y_{j}-y_{i}}}{y_{i+k+1}-y_{i}}=f(y_{j})
\end{align*}

\end_inset


\end_layout

